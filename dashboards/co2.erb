    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="WORLD_EMISSIONS_INTENSITY" data-view="List" data-unordered="true" data-title="" data-moreinfo="t C02e / MWh sent out"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="WORLD_ATMOSPHERIC_CO2" data-view="Number" data-suffix=" ppm" data-title="" data-moreinfo="ppm"></div>
    </li>


  </ul>
